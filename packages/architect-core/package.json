{
  "name": "@vertex115/architect-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/VertexA115/architect.git"
  },
  "scripts": {
    "compile": "tsc --build",
    "eslint": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools",
    "test": "jest --passWithNoTests --updateSnapshot && eslint",
    "test:watch": "jest --watch",
    "watch": "tsc --build -w"
  },
  "author": {
    "name": "Alex XZ Cypher Zero",
    "email": "contact@alex0.net",
    "url": "https://www.alex0.net",
    "organization": false
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^16",
    "@types/object-hash": "^2.2.1",
    "@types/semver": "^7.3.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "jest-junit": "^15",
    "jest-mock": "^29.5.0",
    "npm-check-updates": "^16",
    "standard-version": "^9",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "appdirsjs": "^1.2.7",
    "commander": "10.0.1",
    "fast-safe-stringify": "^2.1.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "memfs": "^3.5.1",
    "object-hash": "^3.0.0",
    "projen": "^0.71.29",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.5.0",
    "tst-reflect": "^0.12.0",
    "tst-reflect-transformer": "^0.12.5",
    "uuid": "^9.0.0"
  },
  "main": "lib/index.js",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "types": "lib/index.d.ts"
}
