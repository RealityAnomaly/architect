{
  "name": "@perdition/architect-core",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RealityAnomaly/architect.git"
  },
  "exports": {
    ".": "./src/index.mts"
  },
  "bin": {
    "architect": "bin/cli/index.sh",
    "architect-esm": "bin/cli/index.js"
  },
  "scripts": {
    "compile": "tsc --build",
    "eslint": "eslint --fix --no-error-on-unmatched-pattern src test build-tools",
    "test": "jest --passWithNoTests --updateSnapshot && eslint",
    "test:watch": "jest --watch",
    "watch": "tsc --build -w",
    "generate": "npx json2ts -i internal/schema -o src/generated/schema && node --loader ts-node/esm utils/generate-core-crds.mts"
  },
  "author": {
    "name": "Alex XZ Cypher Zero",
    "email": "contact@alex0.net",
    "url": "https://www.alex0.net",
    "organization": false
  },
  "main": "src/index.mts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.7",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsConfig": "./../../tsconfig.dev.json"
        }
      ]
    }
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@kubernetes-models/apimachinery": "^2.0.1",
    "@kubernetes-models/crd-generate": "^5.0.1",
    "@kubernetes-models/generate": "^2.4.0",
    "@swc/core": "^1.9.3",
    "@types/ajv": "^1.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.1",
    "@types/object-hash": "^3.0.6",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^10.0.0",
    "@yarnpkg/core": "^4.1.6",
    "@yarnpkg/fslib": "^3.1.1",
    "ajv": "8.17.1",
    "appdirsjs": "^1.2.7",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "js-yaml": "^4.1.0",
    "kubernetes-models": "^4.4.1",
    "lodash": "^4.17.21",
    "object-hash": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.6.3",
    "ts-graphviz": "^2.1.5",
    "ts-node": "^10.9.2",
    "tst-reflect": "^0.12.0",
    "tst-reflect-transformer": "^1.0.0-alpha.11",
    "typescript": "^5.7.2",
    "uuid": "^11.0.3",
    "wildcard-match": "^5.1.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^15.0.3"
  }
}
