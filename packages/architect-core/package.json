{
  "name": "@perdition/architect-core",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/RealityAnomaly/architect.git"
  },
  "exports": {
    ".": "./src/index.mts"
  },
  "bin": {
    "architect": "bin/cli/index.sh",
    "architect-esm": "bin/cli/index.js"
  },
  "scripts": {
    "compile": "tsc --build",
    "eslint": "eslint --ext .ts,.tsx --fix --no-error-on-unmatched-pattern src test build-tools",
    "test": "jest --passWithNoTests --updateSnapshot && eslint",
    "test:watch": "jest --watch",
    "watch": "tsc --build -w"
  },
  "author": {
    "name": "Alex XZ Cypher Zero",
    "email": "contact@alex0.net",
    "url": "https://www.alex0.net",
    "organization": false
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock": "^29.7.0",
    "npm-check-updates": "^17.1.11",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5"
  },
  "dependencies": {
    "@swc/core": "^1.9.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.9.4",
    "@types/object-hash": "^3.0.6",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^10.0.0",
    "appdirsjs": "^1.2.7",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "object-hash": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.6.3",
    "ts-node": "^10.9.2",
    "tst-reflect": "^0.12.0",
    "tst-reflect-transformer": "1.0.0-alpha.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.3"
  },
  "main": "src/index.mts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.7",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsConfig": "./../../tsconfig.dev.json"
        }
      ]
    }
  },
  "types": "lib/index.d.ts"
}
